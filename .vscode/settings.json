{
  "typescript.tsdk": "./node_modules/typescript/lib",
  "npm.packageManager": "pnpm",

  "prettier.enable": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Auto fix
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },

  // "path-intellisense.mappings": {
  //   "@/": "${workspaceRoot}/",
  //   "#/": "${workspaceRoot}/"
  // },
  "files.associations": {
    "*.env.*": "dotenv"
  },
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/.history": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },
  "files.exclude": {
    "**/.cache": true,
    "**/.editorconfig": true,
    "**/.eslintcache": true,
    "**/bower_components": true,
    "**/.idea": true,
    "**/tmp": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.vscode/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/bower_components/**": true,
    "**/dist/**": true,
    "**/yarn.lock": true,
    "**/pnpm-lock.yaml": true
  },
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en,en-US",
  "cSpell.words": [
    "antfu",
    "brotli",
    "browserslist",
    "coderwyd",
    "commitlint",
    "ecomm",
    "esbuild",
    "esnext",
    "esno",
    "icontrol",
    "mockjs",
    "noopener",
    "noreferrer",
    "nums",
    "pico",
    "picocolors",
    "pinia",
    "pnpm",
    "Prefixs",
    "styl",
    "stylelint",
    "taze",
    "tnum",
    "unocss",
    "unplugin",
    "unref",
    "unvalidated",
    "vant",
    "vite",
    "vnode",
    "vnodes",
    "vueuse"
  ]
}
